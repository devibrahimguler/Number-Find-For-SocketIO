<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fr.HakkimizdaFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/geriHakkimizdaFr"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tanitimHakkimizdaFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bu oyun sizin dikkat ve çözümleme yeteneğinizi denemeniz için programlanmıştır."
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/versiyonHakkimizdaFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versiyon : 1.0.0"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
</layout>
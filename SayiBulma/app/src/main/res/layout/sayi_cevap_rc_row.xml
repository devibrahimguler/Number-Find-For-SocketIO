<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<data>
    <variable
        name="cevaplar"
        type="com.muntazif.sayibulma.model.Cevap" />
</data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cevap1SayiCevapRc"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/arbutus"
                android:text="@{cevaplar.cevap1}"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cevap2SayiCevapRc"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/arbutus"
                android:text="@{cevaplar.cevap2}"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cevap3SayiCevapRc"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/arbutus"
                android:text="@{cevaplar.cevap3}"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cevap4SayiCevapRc"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/arbutus"
                android:text="@{cevaplar.cevap4}"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/allcevapSayiCevapRc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:fontFamily="@font/arbutus"
            android:text="@{cevaplar.allcevap}"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>
</layout>
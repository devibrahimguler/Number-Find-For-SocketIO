<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fr.GorunumFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/resimGorunumFr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/kullanici_resmi"/>

        <TextView
            android:id="@+id/isimGorunumFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:fontFamily="@font/alike_angular"
            android:layout_below="@+id/resimGorunumFr"
            android:text="Kullanıcı İsmi"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textSize="25sp" />

        <View
            android:id="@+id/view2GorunumFr"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/isimGorunumFr"
            android:background="#000"/>

        <TextView
            android:id="@+id/cikisYapGorunumFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/buttons_bg"
            android:layout_below="@+id/view2GorunumFr"
            android:fontFamily="@font/alike_angular"
            android:text="Çıkış Yap"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:textSize="25sp" />

        <View
            android:id="@+id/view3GorunumFr"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/cikisYapGorunumFr"
            android:background="#000" />

        <TextView
            android:id="@+id/hakkimizdaGorunumFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginHorizontal="100dp"
            android:background="@drawable/buttons_bg"
            android:layout_below="@+id/view3GorunumFr"
            android:fontFamily="@font/alike_angular"
            android:text="Hakkımızda"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:layout_marginTop="30dp"
            android:textSize="25sp" />
    </RelativeLayout>
</layout>